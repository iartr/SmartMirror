<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="content_placeholder_text" format="color|reference" />
    <attr name="background_highlighted" format="color|reference" />
    <attr name="button_tertiary_foreground" format="color|reference" />
    <attr name="button_tertiary_foreground_disabled" format="color|reference" />

    <!-- Base application theme. -->
    <style name="Theme.SmartMirror" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="content_placeholder_text">@color/gray_400</item>
        <item name="background_highlighted">@color/black_alpha8</item>
        <item name="button_tertiary_foreground">@color/purple_200</item>
        <item name="button_tertiary_foreground_disabled">@color/purple_200_40</item>
    </style>

    <style name="Theme.SmartMirror.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SmartMirror.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SmartMirror.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>